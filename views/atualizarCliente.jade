extends layout

block content
  h1 Atualizar contato
  form(action='/contatoAtualizar' method='post')
    input(type='hidden' id='nomeAntigo' name="nomeAntigo" value="#{nome}")
    label(for="nome") Nome
    input(type='text' id='nome' name="nome" value="#{nome}")
    br
    br
    label(for="telefone") Telefone:
    input(type='text' id='telefone' name="telefone" value="#{telefone}")=telefone
    br
    br
    input(type="submit", value="Salvar" class="btn btn-primary")